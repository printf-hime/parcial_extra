public void frear (){
    if (velocidade>=5) {
        velocidade -=5;
    } else {
        velocidade= 0;
    }
}
velocidade = 0;
        {
        if (velocidade == 0) {
            marcha = 0; // Se parar completamente, volta para marcha 0
        } else if (marcha > 1) {
            marcha--; // Reduz a marcha se n√£o parar completamente
